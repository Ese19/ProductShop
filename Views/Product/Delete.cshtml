@model Product

<form method="post" asp-action="DeletePost" >
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger">Delete Product</h2>
            <hr>
        </div>
        @* <div asp-validation-summary="All"></div> *@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Enter name of product" disabled>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" rows="3" class="form-control" placeholder="Enter description of product" disabled></textarea>
            
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input type="text" class="form-control" asp-for="Price" placeholder="Enter product price in $" disabled>
        </div>
        
        
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to Products
        </a>
    </div>
</form>