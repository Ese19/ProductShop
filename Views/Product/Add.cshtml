@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Product</h2>
            <hr>
        </div>
        @* <div asp-validation-summary="All"></div> *@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Enter name of product">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" rows="3" class="form-control" placeholder="Enter description of product"></textarea>
            
        </div>

        
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input type="text" class="form-control" asp-for="Price" placeholder="Enter product price in $">
            <span asp-validation-for="Price" class="text-danger d-block"></span>
        </div>
        
        
        <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to Products
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}